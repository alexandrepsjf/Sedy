<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SedyModelPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>model.Bairro</class>
    <class>model.Cliente</class>
    <class>model.FormaPgm</class>
    <class>model.Ligacoes</class>
    <class>model.ListaProdutos</class>
    <class>model.Nivel</class>
    <class>model.Pedido</class>
    <class>model.Produto</class>
    <class>model.Telefone</class>
    <class>model.Usuario</class>
    <class>model.Email</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sedy?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="fanuelson"/>
    </properties>
  </persistence-unit>
</persistence>
